---
layout: null
permalink: /feed.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>Ethereum EIPs - Ethereum Improvement Proposals</title>
    <description>The EIPs listed here are created and merged through the ethereum/EIPs Github repo.</description>
    <link>{{ site.url }}</link>
    <atom:link href="{{ site.url }}/feed.xml" rel="self" type="application/rss+xml" />
    <lastBuildDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</lastBuildDate>
    {% comment %}_eiplist_ contains all pages in the site, some of which aren't EIPs -- so we check that a status is set. {% endcomment %}
    {% assign eiplist = site.pages | sort: 'eip' | reverse %}
    {% for eip in eiplist %}
      {% if eip.status %}
      {% capture description %}
        {% include eipfeedcontent.html %}
      {% endcapture %}
      {% assign eiptitle = eip.title %}{% if eip.status == "Last Call" %}{% assign eiptitle = eiptitle | append: " (Last Call)" %}{% endif %}
      <item>
        <title>EIP-{{ eip.eip }}: {{ eiptitle | xml_escape }}</title>
        <description>{{ description | xml_escape }}</description>
        <pubDate>{{ eip.created | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
        {% if eip.category %}<category>{{ eip.category }}</category>{% endif %}
        <link>{{ site.url }}{{ eip.url }}</link>
        <guid>{{ site.url }}{{ eip.url }}{{ eip.status | xml_escape }}</guid>
      </item>
      {% endif %}
    {% endfor %}
  </channel>
</rss>